{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "lib":["es6","DOM"],
        "module": "commonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "target": "ES6",
        "allowJs": true,
        "baseUrl": ".",
        "jsx":"react",
        "types": [
          "react",
          "react-dom"
        ]
      },

    "include": [
        "./index.d.ts",
        "**/*.ts"
, "**/*.tsx"  ],
      
    "exclude": [
        "node_modules",
        "./dist/"
      ],

    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "typeRoots": ["./node_modules/phaser/types"],
    "types": ["Phaser"]
  }